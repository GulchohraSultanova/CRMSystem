{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD}"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "SigningKey": "${JWT_SIGNINGKEY}"
  },
  "MailSettings": {
    "Mail": "${MAIL_ADDRESS}",
    "DisplayName": "${MAIL_DISPLAY_NAME}",
    "Password": "${MAIL_PASSWORD}",
    "Host": "${MAIL_HOST}",
    "Port": "$",
    { "MAIL_PORT" }
  }
}
